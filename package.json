{
  "name": "the-graph-demo-hybrid",
  "version": "2.0.0",
  "description": "混合架构区块链数据查询 - 支持 The Graph 官方子图 + Etherscan",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^9.2.1",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "lucide-react": "^0.263.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "graphql-ws": "^5.14.0",
    "@apollo/client": "^3.8.0"
  },
  "scripts": {
    "start": "concurrently \"npm run server-hybrid\" \"npm run client\"",
    "client": "react-scripts start",
    "server": "node -r dotenv/config server.js",
    "server-hybrid": "node -r dotenv/config server-hybrid.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run server-hybrid\" \"npm run client\"",
    "dev:original": "concurrently \"npm run server\" \"npm run client\"",
    "health-check": "curl -s http://localhost:3001/health | jq",
    "start-script": "chmod +x start.sh && ./start.sh"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3001",
  "keywords": [
    "the-graph",
    "ethereum", 
    "blockchain",
    "graphql",
    "defi",
    "web3",
    "uniswap",
    "hybrid"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/limuran/the-graph-demo.git"
  },
  "author": "limuran",
  "license": "MIT"
}